<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_tarot"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="6"
        android:rowCount="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.5">


        <ImageButton
            android:id="@+id/sunButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="0"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/devilButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/loversButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/deathButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/threeOfCupsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/fiveOfCupsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/sevenOfWandsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />

        <ImageButton
            android:id="@+id/tenOfWandsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="8dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/KnightofWandsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_column="2"
            android:layout_row="1"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/nineOfSwordsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_column="3"
            android:layout_row="1"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/tenOfWordsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_column="4"
            android:layout_row="1"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/queenOfSwordsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_column="5"
            android:layout_row="1"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />

        <ImageButton
            android:id="@+id/aceOfPentaclesButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            android:layout_margin="8dp"
            android:layout_column="0"
            android:layout_row="2"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/navy_tarot" />
        <ImageButton
            android:id="@+id/pageOfPentaclesButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/navy_tarot"
            android:layout_column="1"
            android:layout_row="2"
            android:importantForAccessibility="no"
            android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/kingOfPentaclesButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/navy_tarot"
            android:layout_column="2"
            android:layout_row="2"
            android:importantForAccessibility="no"
            android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/eightOfPentaclesButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/navy_tarot"
            android:layout_column="3"
            android:layout_row="2"
            android:importantForAccessibility="no"
            android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/twoOfSwordsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/navy_tarot"
            android:layout_column="4"
            android:layout_row="2"
            android:importantForAccessibility="no"
            android:layout_margin="8dp"/>
        <ImageButton
            android:id="@+id/nineOfWandsButton"
            android:layout_width="53dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/navy_tarot"
            android:layout_column="5"
            android:layout_row="2"
            android:importantForAccessibility="no"
            android:layout_margin="8dp"/>

    </GridLayout>

    <TextView
        android:id="@+id/tarotsectionText"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="cursive"
        android:text="Please, Choose your tarot cards"
        android:textAlignment="center"
        android:textColor="@color/eyesblue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.597" />


</androidx.constraintlayout.widget.ConstraintLayout>